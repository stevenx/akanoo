<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with type="com.akanoo.client.views.CanvasLinkView.Resources"
		field="resources"></ui:with>

	<g:SimplePanel addStyleNames="{resources.canvasLinkStyle.canvasLink}">
		<g:HorizontalPanel>
			<g:cell verticalAlignment="ALIGN_MIDDLE">
				<g:Anchor ui:field="anchor"
					addStyleNames="{resources.canvasLinkStyle.canvasAnchor}" />
			</g:cell>
			<g:cell verticalAlignment="ALIGN_MIDDLE">
				<g:PushButton ui:field="optionsButton"
					addStyleNames="{resources.canvasLinkStyle.optionsButton}" />
			</g:cell>
		</g:HorizontalPanel>
	</g:SimplePanel>
</ui:UiBinder>
